# ============================================================================
# FRONTEND ENVIRONMENT CONFIGURATION - MENDAUR API
# ============================================================================
# File: .env.local (untuk development)
# Simpan file ini di root folder React project

# ============================================================================
# API CONFIGURATION - Gunakan environment variable, bukan hardcode
# ============================================================================

# DEVELOPMENT (Local machine dengan Laravel server)
REACT_APP_API_URL=http://localhost:8000/api

# STAGING (Server staging)
# REACT_APP_API_URL=https://staging-api.mendaur.com/api

# PRODUCTION (Server production)
# REACT_APP_API_URL=https://api.mendaur.com/api

# ============================================================================
# FEATURE FLAGS
# ============================================================================

REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ACTIVITY_LOGS=true
REACT_APP_ENABLE_BACKUP=true
REACT_APP_ENABLE_BADGE_MANAGEMENT=true

# ============================================================================
# LOGGING
# ============================================================================

REACT_APP_LOG_LEVEL=debug

# ============================================================================
# OTHER CONFIG
# ============================================================================

REACT_APP_APP_NAME=Mendaur Admin
REACT_APP_VERSION=1.0.0
